def goi_y_nganh(diem, khoi):
    khoi = khoi.upper()
    if khoi not in database:
        print("Khá»‘i chÆ°a Ä‘Æ°á»£c há»— trá»£.")
        return

    danh_sach = database[khoi]
    print(f"\nðŸ“Œ Gá»£i Ã½ ngÃ nh phÃ¹ há»£p cho khá»‘i {khoi} vÃ  Ä‘iá»ƒm {diem}:")
    found = False
    for item in danh_sach:
        if diem >= item['diem_chuan']:
            found = True
            print(f"- {item['nganh']} | {item['truong']} (Ä‘iá»ƒm chuáº©n: {item['diem_chuan']})")
    if not found:
        print("â—Äiá»ƒm cá»§a báº¡n hÆ¡i tháº¥p so vá»›i cÃ¡c ngÃ nh trong danh sÃ¡ch, hÃ£y cÃ¢n nháº¯c trÆ°á»ng top tháº¥p hÆ¡n hoáº·c trÆ°á»ng ngoÃ i cÃ´ng láº­p.")


if __name__ == "__main__":
